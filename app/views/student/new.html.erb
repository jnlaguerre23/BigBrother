<% provide(:title, "Form") %>
<h1>Apply for mentor</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@student, url: form_path) do |f| %>

      <%= f.label :phone %>
      <%= f.text_field :phone, class: 'form-control' %>

      <%= f.label :school %>
      <%= f.text_field :school, class: 'form-control' %>

      <%= f.label :grade %>
      <%= f.text_field :grade, class: 'form-control' %>

      <%= f.label :gpa %>
      <%= f.text_field :gpa, class: 'form-control' %>

      <%= f.label :nationality %>
      <%= f.text_field :nationality, class: 'form-control' %>


      <%= f.submit "Submit", class: "btn btn-primary" %>  </div>

    <% end %>

</div>
